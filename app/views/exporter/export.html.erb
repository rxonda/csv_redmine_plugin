<fieldset>
	<legend>Filtro</legend>
<%= form_tag({controller: "exporter", action: "export", format: 'csv'}, method: "get") do %>
  <%= label_tag(:dataInicio, "Data de início do período:") %>
  <%= text_field_tag(:dataInicio) %>
  <%= label_tag(:dataTermino, "Data de fim do período:") %>
  <%= text_field_tag(:dataTermino) %>
  <%= submit_tag("Gerar arquivo") %>
<% end %>
</fieldset>
